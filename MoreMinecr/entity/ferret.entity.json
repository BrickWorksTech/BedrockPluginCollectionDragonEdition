{
    "format_version": "1.10.0",
    "minecraft:client_entity": {
      "description": {
        "identifier": "mp:ferret",
        "materials": {
          "default": "skeleton"
        },
        "textures": {
          "ferretdef": "textures/entity/ferret",
          "ferretbrown": "textures/entity/ferret1",
          "ferretgray": "textures/entity/ferret2"
        },
        "geometry": {
          "default": "geometry.ferret"
        },
        "animations": {
          "walk": "animation.ferret.walk",
          "look_at_target": "animation.humanoid.look_at_target.default.v1.0",
          "sit": "animation.ferret.sitting"
